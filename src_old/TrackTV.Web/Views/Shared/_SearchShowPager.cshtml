@model TrackTV.Services.VewModels.Shows.SearchShowPagerViewModel

<div class="text-center">
    <ul class="pagination ">

        @if (Model.CurrentPage > 1)
        {
            <li>
                @Html.ActionLink("«", Model.ActionName, Model.ControllerName, new
                {
                    Model.Query,
                    Page = Model.CurrentPage - 1
                }, null)
            </li>
        }


        @if (Model.CurrentPage == 1)
        {
            <li class="active">
                @Html.ActionLink("1", Model.ActionName, Model.ControllerName, new
                {
                    Model.Query,
                    Page = 1
                }, null)
            </li>
        }
        else
        {
            <li>
                @Html.ActionLink("1", Model.ActionName, Model.ControllerName, new
                {
                    Model.Query,
                    Page = 1
                }, null)
            </li>
        }

        @if (Model.CurrentPage > 2)
        {
            <li class="disabled">
                <a>...</a>
            </li>

            if (Model.CurrentPage == Model.TotalPages && Model.TotalPages > 3)
            {
                <li>
                    @Html.ActionLink((Model.CurrentPage - 2).ToString(), Model.ActionName, Model.ControllerName, new
                    {
                        Model.Query,
                        Page = Model.CurrentPage - 2
                    }, null)
                </li>
            }

            <li>
                @Html.ActionLink((Model.CurrentPage - 1).ToString(), Model.ActionName, Model.ControllerName, new
                {
                    Model.Query,
                    Page = Model.CurrentPage - 1
                }, null)
            </li>
        }

        @if (Model.CurrentPage != 1 && Model.CurrentPage != Model.TotalPages)
        {
            <li class="active">
                @Html.ActionLink(Model.CurrentPage.ToString(), Model.ActionName, Model.ControllerName, new
                {
                    Model.Query,
                    Page = Model.CurrentPage
                }, null)
            </li>
        }


        @if (Model.CurrentPage < Model.TotalPages - 1)
        {
            <li>
                @Html.ActionLink((Model.CurrentPage + 1).ToString(), Model.ActionName, Model.ControllerName, new
                {
                    Model.Query,
                    Page = Model.CurrentPage + 1
                }, null)
            </li>

            if (Model.CurrentPage == 1 && Model.TotalPages > 3)
            {
                <li>
                    @Html.ActionLink((Model.CurrentPage + 2).ToString(), Model.ActionName, Model.ControllerName, new
                    {
                        Model.Query,
                        Page = Model.CurrentPage + 2
                    }, null)
                </li>
            }

            <li class="disabled">
                <a>...</a>
            </li>
        }

        @if (Model.CurrentPage == Model.TotalPages)
        {
            <li class="active">
                @Html.ActionLink(Model.TotalPages.ToString(), Model.ActionName, Model.ControllerName, new
                {
                    Model.Query,
                    Page = Model.TotalPages
                }, null)
            </li>
        }
        else
        {
            <li>
                @Html.ActionLink(Model.TotalPages.ToString(), Model.ActionName, Model.ControllerName, new
                {
                    Model.Query,
                    Page = Model.TotalPages
                }, null)
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li>
                @Html.ActionLink("»", Model.ActionName, Model.ControllerName, new
                {
                    Model.Query,
                    Page = Model.CurrentPage + 1
                }, null)
            </li>
        }
    </ul>
</div>