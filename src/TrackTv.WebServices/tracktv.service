[Unit]
Description=TrackTv REST Services

[Service]
WorkingDirectory=/var/www/tracktv/public_html/
ExecStart=/var/www/tracktv/public_html/TrackTv.WebServices
Restart=always

# Restart service after 3 seconds if dotnet service crashes
RestartSec=3
SyslogIdentifier=tracktv
User=root
Environment=ASPNETCORE_ENVIRONMENT=Production 

[Install]
WantedBy=multi-user.target
