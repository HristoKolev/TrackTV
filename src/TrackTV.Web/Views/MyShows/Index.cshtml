@using TrackTV.Services.VewModels.MyShows
@model TrackTV.Services.VewModels.MyShows.MyShowsViewModel

@{
    ViewBag.Title = "My Shows";
}


<h1 class="text-center show-group-title">Current Shows(@Model.Running.Count)</h1>

<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th class="col-md-3 danger">Show</th>
        <th class="col-md-3 danger">Last Episode</th>
        <th class="col-md-3 danger">Next Episode</th>
        <th class="col-md-3 danger"></th>

    </tr>
    </thead>
    <tbody>
    @foreach (MyShowViewModel show in Model.Running)
    {
        <tr>
            <td class="col-md-3">
                <strong class="my-show-title">
                    @Html.ActionLink(show.Name, "ById", "ShowDetails", new
               {
                   userFriendlyId = show.UserFriendlyId
               }, null)
                </strong>
            </td>

            <td class="col-md-3">
                @Html.DisplayFor(_ => show.LastEpisode)
            </td>

            <td class="col-md-3">
                @Html.DisplayFor(_ => show.NextEpisode)
            </td>

            <td class="col-md-3">

                <div>

                    @using (Html.BeginForm("Unsubscribe", "MyShows"))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@show.Id" name="id"/>
                        <input type="submit" value="Unsubscribe" class="btn btn-danger my-show-unsubscribe-button"/>
                    }

                </div>

            </td>
        </tr>
    }
    </tbody>
</table>


<h1 class="text-center show-group-title">
    <span class="ended-word">Ended</span> Shows(@Model.Ended.Count)
</h1>

<table class="table table-striped table-hover .my-show-table">
    <thead>
    <tr>
        <th class="col-md-3 danger">Show</th>
        <th class="col-md-3 danger">Last Episode</th>
        <th class="col-md-3 danger"></th>
        <th class="col-md-3 danger"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (MyShowViewModel show in Model.Ended)
    {
        <tr>
            <td class="col-md-3">
                <strong class="my-show-title">
                       @Html.ActionLink(show.Name, "ById", "ShowDetails", new
                       {
                           userFriendlyId = show.UserFriendlyId
                       }, null)
                </strong>
            </td>


            <td class="col-md-3">
                @Html.DisplayFor(_ => show.LastEpisode)
            </td>

            <td class="col-md-3"></td>

            <td class="col-md-3">
                <div>

                    @using (Html.BeginForm("Unsubscribe", "MyShows"))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@show.Id" name="Id"/>
                        <input type="submit" value="Unsubscribe" class="btn btn-danger my-show-unsubscribe-button"/>
                    }
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>