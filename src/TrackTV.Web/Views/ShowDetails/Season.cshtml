@model IList<EpisodeViewModel>

<table class="table table-striped table-hover ">
    <thead>
    <tr>
        <th>Episode</th>
        <th>Description</th>
        <th>Air date</th>
    </tr>
    </thead>
    <tbody>

    @foreach (EpisodeViewModel episode in Model)
    {
        <tr>
            <td class="col-md-2">
                <strong>Episode @Html.DisplayFor(_ => episode.Number)</strong>
                <br/>
                @Html.DisplayFor(_ => episode.Title)
            </td>

            <td class="col-md-8">
                <div class="show-more">
                    @Html.DisplayFor(_ => episode.Description)
                </div>
            </td>

            <td class="col-md-2">
                @Html.DisplayFor(_ => episode.FirstAired)
            </td>
        </tr>
    }
    </tbody>
</table>